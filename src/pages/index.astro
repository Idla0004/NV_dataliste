---
import Layout from "../layouts/Layout.astro";
import PrisCard from "../components/Datacard.astro";
import "../css/general.css";

const endpoint =
  "https://wvrvzqmqqflajhvaytpl.supabase.co/rest/v1/fremkald_priser?select=*";
const key =
  "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Ind2cnZ6cW1xcWZsYWpodmF5dHBsIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjUzNTA0MjksImV4cCI6MjA4MDkyNjQyOX0.Fvg2ap5vq5HtKijdr2QiXsi_V7SSZUM2YKozBCd8kjw";

const options = {
  method: "GET",
  headers: {
    apikey: key,
  },
};

const data = await fetch(endpoint, options).then((res) => res.json());
---

<Layout>
  <section class="prisliste-container">
    <PrisCard
      data={data}
      headline="Film"
      engangskamera="Engangskamera: 10 Kr ekstra"
      information="Ved APS er der gebyr på 10 til 50 Kr alt efter hvad der skal laves."
      subCategories={[
        {
          kategori: "135mm",
          headline: "135 mm:",
          procestime: "Behandlingstid: 1-2 dage",
        },
        {
          kategori: "120mm",
          headline: "120 mm:",
          procestime: "Behandlingstid: 1-2 dage",
        },
        {
          kategori: "E6",
          headline: "E6:",
          procestime: "Behandlingstid: 3-5 dage",
        },
      ]}
    />
  </section>

  <section class="prisliste-container">
    <PrisCard
      data={data}
      headline="Fra digital medie (smartphone, usb...)"
      engangskamera=""
      underline=""
      subCategories={[
        {
          kategori: "Digitalt Medie",
          headline: "Digitale billeder til papirfotos",
          procestime: "1-2 dage",
        },
      ]}
    />
  </section>

  <section class="prisliste-container">
    <PrisCard
      data={data}
      headline="Båndvideo"
      engangskamera=""
      underline=""
      subCategories={[
        {
          kategori: "VHS til DVD (eller usb)",
          headline: "VHS til DVD (eller usb)",
          procestime: "1-2 dage",
        },
        {
          kategori: "Smal film til digitalt",
          headline: "Smal film til digitalt",
          procestime: "1-2 dage",
        },
      ]}
    />
  </section>
</Layout>

<style>
  .fremkald-side {
    font-family: montserrat-r;
    margin: clamp(40px, 5vw, 130px);
    display: flex;
    flex-direction: column;
  }

  section {
    max-width: 1300px;
    margin: auto;
  }

  .prisliste-container {
    margin-bottom: clamp(1rem, 5vw, 3rem);
  }

  @media (max-width: 850px) {
    .fremkald-side {
      margin: auto;
      padding: clamp(10px, 4vw, 40px);
    }
  }
</style>
